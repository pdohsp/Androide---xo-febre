<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuemSomos">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ADD8E6">>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">>
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_gravity="center"

                app:srcCompat="@mipmap/logo" />

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Xô, Febre!"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="40sp"
                app:fontFamily="@font/aclonica" />

            <TextView
                android:id="@+id/subtitulo"
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:layout_marginLeft="10dp"
                android:text="Aprenda a combater a febre no mobile."
                android:textColor="#000000"
                android:textSize="18sp"
                app:fontFamily="@font/aclonica" />

            <TextView
                android:id="@+id/titulo2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#FFFAFA"
                android:text="  Instituto Pernambucano de Ensino Superior\n\n\  Desenvolvido por: André Lima / Pedro Santos\n\n  Programação Para Despositivos Móveis\n\n  Professor: Rômulo Lima\n\n  Conteúdo para fins acadêmicos"
                android:textColor="#000000"
                android:textSize="13sp"
                app:fontFamily="@font/aclonica" />

            <Button
                android:id="@+id/buttonHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Home"
                tools:layout_editor_absoluteX="170dp"
                tools:layout_editor_absoluteY="413dp" />


        </LinearLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>